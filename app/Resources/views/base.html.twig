<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Third and Grove Assessment | {% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/app/css/bootstrap.css') }}" rel="stylesheet" media="screen" type="text/css">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 notification">
                {% block notification %}
                    {% set array = app.session.flashbag.all %}
                    {% for tag, line in array %}
                        {% for underline in line %}
                            <div class="alert alert-{{ tag }}" role="alert">
                                {{ underline }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endblock %}
            </div>
        </div>
        {% block body %}{% endblock %}
    </div>

        {% block javascripts %}
            <script src="{{ asset('bundles/app/js/jquery.js') }}"></script>
            <script src="{{ asset('bundles/app/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('bundles/app/js/tag-assessment.js') }}"></script>
        {% endblock %}
    </body>
</html>
